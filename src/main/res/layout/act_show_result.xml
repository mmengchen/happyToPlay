<?xml version="1.0" encoding="utf-8"?><!--查询活动的显示界面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/frag_message_rl_header"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/colorGreenFont"
        android:gravity="center">
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src=""
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="查询结果"/>
    </RelativeLayout>
    <!--导航栏结束-->
    <!--内容区域-->
    <com.xiaoguang.happytoplay.view.XListView
        android:id="@+id/act_show_result_xlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/act_show_result_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/colorGreenFont"
        android:textColor="@color/colorWhite"
        android:text="返    回"/>
</LinearLayout>